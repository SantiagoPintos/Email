<Window x:Class="Email.EmailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:local="clr-namespace:Email"
        mc:Ignorable="d"
        Title="Email" Height="600" Width="1000"
        WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Folder list -->
        <ListBox x:Name="FoldersListBox" Grid.Row="1"
         SelectionChanged="FoldersListBox_SelectionChanged"
         Background="#202020" Foreground="White"
         BorderThickness="0"
         HorizontalAlignment="Stretch"
         HorizontalContentAlignment="Stretch"
         Padding="0, 50, 0, 0"
         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border
                    CornerRadius="5"
                    Padding="10"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding DisplayName}" FontSize="14"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <!-- Email list -->
        <Grid Grid.Column="1" Background="#2A2A2A">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock x:Name="CategoryTitle" Text="Inbox" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <ListBox x:Name="EmailsListBox" Grid.Row="1"
                Background="Transparent" BorderThickness="0"
                SelectionChanged="EmailsListBox_SelectionChanged"
                Padding="10"
                HorizontalContentAlignment="Stretch"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Border Background="#303030" 
                                Padding="10" 
                                Margin="0,2,0,2"
                                HorizontalAlignment="Stretch">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding Subject}" 
                                   Grid.Column="0" Grid.Row="0"
                                   Foreground="White" FontWeight="Bold" 
                                   TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Sender.EmailAddress.Name}" 
                                   Grid.Column="0" Grid.Row="1"
                                   Foreground="#CCCCCC" 
                                   TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding ReceivedDateTime, StringFormat='{}{0:d}'}" 
                                   Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
                                   Foreground="#999999" 
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
            
        </Grid>

        <!-- Email details -->
        <Grid Grid.Column="2" x:Name="EmailDetailsGrid" Background="#1A1A1A">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="20">
                <TextBlock x:Name="SubjectTextBlock" FontSize="24" FontWeight="Bold" Foreground="White"/>
                <TextBlock x:Name="SenderTextBlock" FontSize="14" Foreground="#CCCCCC"/>
                <TextBlock x:Name="DateTextBlock" FontSize="12" Foreground="#999999"/>
            </StackPanel>

            <wv2:WebView2 Grid.Row="1" x:Name="BodyWebView" Margin="20,0,20,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20">
                <Button Content="Unread" x:Name="MarkAsUnreadButton" Click="MarkAsUnreadButton_Click" Background="Transparent" Foreground="White" BorderThickness="0" Margin="5,0"/>
                <Button Content="Read" x:Name="MarkAsReadButton" Click="MarkAsReadButton_Click" Background="Transparent" Foreground="White" BorderThickness="0" Margin="5,0"/>
                <Button Content="Reply" x:Name="ReplyButton" Click="ReplyButton_Click" Background="Transparent" Foreground="White" BorderThickness="0" Margin="5,0"/>
                <Button Content="🗑" x:Name="DeleteButton" Click="DeleteButton_Click" Background="Transparent" Foreground="White" BorderThickness="0" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>